<h1>Please Login</h1>

<%= form_tag '/login' do  %>

  <div class="form-group">
    <%= label_tag :email%>:<br>
    <%= text_field_tag :email %>
    
  </div>

  <div class="form-group">
    <%= label_tag :password%>:<br>
    <%= password_field_tag :password  %>
  </div>

  <%= submit_tag "Log in", class: 'btn btn-primary' %>

<% end %>

